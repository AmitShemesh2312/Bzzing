<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentGuessingSong">

    <TextView
        android:id="@+id/player_turn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/hear"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="420dp"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hear" />

    <ImageView
        android:id="@+id/hear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:onClick="hear"
        android:src="@drawable/play_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_guess0"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/corner_radius"
        android:clipToOutline="true"
        android:onClick="chosenGuessedSong"
        android:src="@drawable/black"
        android:tag="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <ImageView
        android:id="@+id/image_guess1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/corner_radius"
        android:clipToOutline="true"
        android:onClick="chosenGuessedSong"
        android:src="@drawable/black"
        android:tag="1"
        app:layout_constraintStart_toEndOf="@+id/image_guess0"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <ImageView
        android:id="@+id/image_guess2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/corner_radius"
        android:clipToOutline="true"
        android:onClick="chosenGuessedSong"
        android:src="@drawable/black"
        android:tag="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <ImageView
        android:id="@+id/image_guess3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/corner_radius"
        android:clipToOutline="true"
        android:onClick="chosenGuessedSong"
        android:src="@drawable/black"
        android:tag="3"
        app:layout_constraintStart_toEndOf="@+id/image_guess2"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/song_name_guess0"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Song Name"
        android:textColor="#000000"
        android:textSize="16dp"
        android:tag="0"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_guess0" />

    <TextView
        android:id="@+id/singer_name_guess0"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Singer Name"
        android:tag="0"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_name_guess0" />

    <TextView
        android:id="@+id/song_name_guess1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="20dp"
        android:text="Song Name"
        android:textColor="#000000"
        android:textSize="16dp"
        android:tag="1"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toEndOf="@+id/image_guess0"
        app:layout_constraintTop_toBottomOf="@+id/image_guess1" />

    <TextView
        android:id="@+id/singer_name_guess1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="10dp"
        android:text="Singer Name"
        android:tag="1"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toEndOf="@+id/image_guess0"
        app:layout_constraintTop_toBottomOf="@+id/song_name_guess1" />

    <TextView
        android:id="@+id/song_name_guess2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Song Name"
        android:textColor="#000000"
        android:textSize="16dp"
        android:tag="2"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_guess2" />

    <TextView
        android:id="@+id/singer_name_guess2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Singer Name"
        android:tag="2"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_name_guess2" />

    <TextView
        android:id="@+id/song_name_guess3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="20dp"
        android:text="Song Name"
        android:textColor="#000000"
        android:textSize="16dp"
        android:tag="3"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toEndOf="@+id/image_guess2"
        app:layout_constraintTop_toBottomOf="@+id/image_guess3" />

    <TextView
        android:id="@+id/singer_name_guess3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="10dp"
        android:text="Singer Name"
        android:tag="3"
        android:onClick="chosenGuessedSong"
        app:layout_constraintStart_toEndOf="@+id/image_guess2"
        app:layout_constraintTop_toBottomOf="@+id/song_name_guess3" />

    <Button
        android:id="@+id/guess_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3757A6"
        android:onClick="songGuess"
        android:text="Guess!"
        android:textAllCaps="false"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singer_name_guess2" />


</androidx.constraintlayout.widget.ConstraintLayout>
